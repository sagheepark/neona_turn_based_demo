# ===========================================
# NEONA CHAT DEMO - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Local MongoDB (default for development)
MONGODB_URL=mongodb://localhost:27017/neona_chat

# Alternative: MongoDB Atlas (for production/remote)
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/neona_chat?retryWrites=true&w=majority

# ===========================================
# AZURE OPENAI CONFIGURATION
# ===========================================
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# ===========================================
# TTS SERVICES CONFIGURATION
# ===========================================
# Typecast TTS (optional - will use fallback if not provided)
TYPECAST_API_KEY=your-typecast-api-key
TYPECAST_API_URL=https://api.icepeak.ai/v1

# SeolMinSeok Dedicated TTS (optional - will use fallback if not provided)
SEOLMINSEOK_API_KEY=your-seolminseok-api-key
SEOLMINSEOK_ACTOR_ID=your-actor-id
SEOLMINSEOK_ENDPOINT=https://dev.icepeak.ai/api/text-to-speech

# ===========================================
# STT SERVICE CONFIGURATION
# ===========================================
# Azure Speech Services (optional - will disable STT if not provided)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=your-azure-region

# ===========================================
# APPLICATION SETTINGS
# ===========================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ===========================================
# SECURITY (for production)
# ===========================================
# SECRET_KEY=your-secret-key-for-jwt-tokens
# ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com